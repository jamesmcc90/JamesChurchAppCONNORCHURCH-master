<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">?android:attr/navigationBarColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/design_default_color_primary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:navigationBarColor">#1e73be</item>
        <item name="android:statusBarColor">@color/design_default_color_primary_dark</item>
    </style>

    <style name="Toolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">#ffffff</item>

    </style>

    <style name="AppTheme.ButtonStyle" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/colorButton</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTheme.ButtonStyle2" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">#ffffff</item>
        <item name="android:clickable">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorButton</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">#1e73be</item>

    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyButton" parent="Theme.MaterialComponents.Light">
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorButtonNormal">#53a0ed</item>

    </style>

    <style name="MyButtonSignUp" parent="Theme.MaterialComponents.Light">
        <item name="colorControlHighlight">#53a0ed</item>

        <item name="colorButtonNormal">#53a0ed</item>

    </style>

</resources>