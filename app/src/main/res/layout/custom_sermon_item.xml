<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/sermonSelect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:scrollbars="none">

    </ListView>

    <ImageView
        android:id="@+id/Sermon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_music" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/Sermon"
        android:text="Sermon name"
        android:textColor="#7019c1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtSpeaker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtName"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="-3dp"
        android:layout_toEndOf="@+id/Sermon"
        android:layout_toRightOf="@+id/Sermon"
        android:text="Speaker"
        android:textColor="#0cd22a"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/ivPlay"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"

        android:layout_marginRight="0dp"
        android:layout_toLeftOf="@id/ivStop"
        android:src="@drawable/ic_play" />


    <ImageView
        android:id="@+id/ivStop"
        android:layout_width="25dp"
        android:layout_height="25dp"

        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"

        android:layout_marginTop="1dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/ic_stop" />




</RelativeLayout>
